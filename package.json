{
  "name": "pyms-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "build:electron": "electron-builder --publish never --linux AppImage --x64"
  },
  
  "build": {
    "appId": "com.pymsscreen",
    "productName": "PyMSscreen",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "web_app.py",
      "myenv/",
      "requirements.txt"
    ],
    "extraResources": [
      {
        "from": "myenv",
        "to": "myenv"
      }
    ],
    "directories": {
      "buildResources": "electron/icons"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage",
    }
  },
  "dependencies": {
    "@radix-ui/react-progress": "^1.1.2",
    "axios": "^1.8.4",
    "chroma-js": "^3.1.2",
    "framer-motion": "^12.6.1",
    "papaparse": "^5.5.2",
    "plotly.js": "^3.0.1",
    "plotly.js-dist-min": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-draggable": "^4.4.6",
    "react-plotly.js": "^2.6.0",
    "react-router-dom": "^6.30.0",
    "react-select": "^5.10.1",
    "smiles-drawer": "^2.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@tailwindcss/cli": "^4.0.15",
    "@tailwindcss/postcss": "^4.0.17",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.17",
    "vite": "^6.2.0"
  }
}
